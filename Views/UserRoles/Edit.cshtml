@model IEnumerable<OASIS.ViewModels.PageClaims>



@{
    ViewData["Title"] = "Create";
}

<div class="row">

    @foreach (var i in Model)
    {
        <div class="card col-4 mb-5" style="width: 18rem; display:flex;border-top-left-radius: 25px; border-top-right-radius: 25px;">
            <div class="card-header" style=" border-top-left-radius: 25px; border-top-right-radius: 25px;">
                <h5> @i.PageName</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var item in i.Claims)
                {
                    <li class="list-group-item row mr-3 ml-3" style="display:flex">
                        <label class="col-10" style="align-self:center">
                            @item.Type
                        </label>
                        <div class="col-2">
                            @if (item.Value == "True")
                            {
                                <input type="checkbox" id="@item.Type-@item.Value-@i.RoleName" onchange="UpdateClaim(this)" checked data-toggle="toggle" data-onstyle="success" data-offstyle="danger">
                            }
                            else
                            {
                                <input type="checkbox" id="@item.Type-@item.Value-@i.RoleName" onchange="UpdateClaim(this)" data-toggle="toggle" data-onstyle="success" data-offstyle="danger">

                            }
                        </div>
                    </li>
                }
            </ul>
        </div>

    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/updateClaim.js"></script>

}

