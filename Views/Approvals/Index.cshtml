@model IEnumerable<OASIS.Models.Approval>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignerStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignerStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bid.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
