@model IEnumerable<OASIS.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />

    <div class="row pb-3 pr-5 pl-5" style=" margin-left: 0.01%; background:#3f4853; align-items:center">
        <a asp-action="Create" style="display:flex; align-items:center; justify-content:center" class="btn btn-success col-12 align-items-center">
            <span class="material-icons mr-2">
                control_point
            </span>
            Add Role
        </a>
    </div>

    <table class="table" style="background:white;">
        <thead>
            <tr>
                <th class="pl-4 pt-3">
                    <input type="submit" name="actionButton" value="Product Type Name" class="btn btn-link" />
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td  class="pl-5">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="text-align:center">
                        <a style="width:auto" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-primary mr-3">
                            <span class="material-icons">
                                edit
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
