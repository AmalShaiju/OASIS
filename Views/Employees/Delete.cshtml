                </form>
            </div>

        </div>
        <div style="width:90%;">
            <a href='@ViewData["returnURL"]' @*asp-action="Index"*@ style="float:right; width:17%;" class="btn btn-info">

                &#8592; Back To List
            </a>
        </div>

    </div>

</div>