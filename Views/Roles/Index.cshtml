@model IEnumerable<OASIS.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Index" method="get">
    <div class="row pb-3 pr-5 pl-5" style=" margin-left: 0.01%; background:#3f4853; align-items:center">
        <div class="col-3">

        </div>
        <div class="col-5 text-center pl-0">
            <partial name="_PagingNavBar" />
        </div>
        <div class="col-2"></div>
        <a asp-action="Create" style="display:flex; align-items:center; justify-content:center" class="btn btn-success col-2 align-items-center" data-toggle="tooltip" data-placement="bottom" title="Add Role">
            <span class="material-icons mr-2">
                control_point
            </span>
            Add Role
        </a>
    </div>
    <table class="table" style="background:white;">
        <thead>
            <tr>
                <th class="pl-5 pt-3">
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th class="pl-0 ">
                    @Html.DisplayNameFor(model => model.LabourCostPerHr)
                </th>

                <th class="pl-0">
                    @Html.DisplayNameFor(model => model.LabourPricePerHr)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="pl-5">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabourPricePerHr)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabourCostPerHr)
                </td>
                <td style="text-align:center">
                    <a style="width:auto" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-primary mr-3" data-toggle="tooltip" data-placement="bottom" title="Edit">
                        <span class="material-icons">
                            edit
                        </span>
                    </a>

                    <a style="width:auto" asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-info" data-toggle="tooltip" data-placement="bottom" title="Details">
                        <span class="material-icons">
                            info
                        </span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>