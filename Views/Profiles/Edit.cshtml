@model OASIS.ViewModels.ProfileVM
<form asp-action="Edit">
    <input type="hidden" asp-for="UserName" />
    <div class="card col-8 p-0 mb-5" style=" border-radius:25px">
        <div style=" border-top-left-radius: 25px; border-top-right-radius: 25px;" class="row card-header m-0">
            <div class="col-1">
                <svg style="height:50%; width:50%;" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none" /><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" /></svg>
            </div>
            <div class="col-10">
                <h5>Personal information</h5>
            </div>
        </div>
        <div class="card-body" style="background: rgba(184, 175, 247, 0.2); border-bottom-left-radius: 25px; border-bottom-right-radius: 25px;">
            <div class="form-group row ml-3">
                <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" tabindex="1" placeholder="Example: John" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row ml-3">
                <label asp-for="MiddleName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="MiddleName" tabindex="3" placeholder="Example: James" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row ml-3">
                <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LastName" tabindex="5" placeholder="Example: Doe" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row ml-3">
                <label asp-for="Phone" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Phone" tabindex="9" placeholder="Example: 9051234567" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>

                </div>

            </div>

            <div class="form-group row ml-3">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" tabindex="11" placeholder="Example: email@address.com" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row ml-3">
                <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                <div class="input-group col-sm-3">
                    <input asp-for="Password" id="password-input" class="form-control" />
                    <div id="password-show-btn" class="input-group-append btn btn-light">
                        <svg id="show-password" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none" /><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" /></svg>
                        <svg style="display:none" id="hide-password" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0zm0 0h24v24H0zm0 0h24v24H0zm0 0h24v24H0z" fill="none" /><path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" /></svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="display:flex; margin-top:50px; margin-bottom:20px;">
        <button type="submit" style="width: 6%;margin-right:3.5%;" class="button-menu form-group btn btn-success" data-toggle="tooltip" data-placement="top" title="Save New Employee">
            <div style="width:20px; height:22px;">
                <svg version="1.0" xmlns="http://www.w3.org/2000/svg" width="512.000000pt" height="512.000000pt" viewBox="0 0 512.000000 512.000000" preserveAspectRatio="xMidYMid meet">

